<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.scancode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.scancode.widget.HeaderView
        android:id="@+id/headerview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:showBack="false"
        app:title="系统条码" />
    
    <LinearLayout 
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <Button 
        android:id="@+id/storage_ibtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:background="@color/home_bottom_text_color_sel"
        android:text="采购入库"
        />
    <Button 
        android:id="@+id/the_library_ibtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:text="销售出库"
         android:background="@color/home_bottom_text_color_sel"
        />
    </LinearLayout>
    <LinearLayout 
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
    <Button 
        android:id="@+id/split_ibtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="托盘分拆"
        android:layout_marginRight="10dp"
        android:background="@color/home_bottom_text_color_sel"
        />
    <Button 
        android:id="@+id/switch_ibtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="设置"
        android:layout_marginLeft="10dp"
        android:background="@color/home_bottom_text_color_sel"
        />
    </LinearLayout>

</LinearLayout>
